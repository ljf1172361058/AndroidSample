    tools:context="com.example.lizhihui.androidfluxsample.activity.MainActivity">

    <Button android:id="@+id/OLD" android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text="发送旧消息" />
    <Button android:id="@+id/NEW" android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text="发送新消息" />
